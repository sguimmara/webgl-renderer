{
  "name": "webgl-renderer",
  "version": "0.1.0",
  "description": "A very simple WebGL renderer",
  "main": "./build/gfx.build.js",
  "type": "module",
  "scripts": {
    "clean-dist": "rm -rf dist/",
    "copy-assets": "npm run clean-dist && mkdir -p dist/assets && cp -r assets dist/",
    "start": "node ./node_modules/parcel-bundler/bin/cli serve ./examples/basic.html --port 8080",
    "lint": "node ./node_modules/eslint/bin/eslint . --ext .mjs --fix",
    "test": "mocha 'test/**/*.mjs' --require esm --recursive --timeout 60000 --exit",
    "build": "rollup --config rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sguimmara/webgl-renderer"
  },
  "keywords": [
    "webgl"
  ],
  "author": "SÃ©bastien Guimmara",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "esm": "^3.2.25",
    "mocha": "^9.2.0",
    "mocha-junit-reporter": "^2.0.2",
    "parcel-bundler": "^1.12.5",
    "rollup": "^2.67.2",
    "ts-node": "^10.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "dependencies": {
    "regenerator-runtime": "^0.13.9"
  }
}
